<UserControl x:Class="Inflectra.SpiraTest.IDEIntegration.VisualStudio2012.Controls.cntlDiscussionFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.10.0"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Inflectra.SpiraTest.IDEIntegration.VisualStudio2012.Controls"
    Height="Auto" Width="Auto"
	HorizontalAlignment="Stretch"
	Margin="0,0,0,5">
	<StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Stretch" Name="txtHeader" Background="{DynamicResource {x:Static vsfx:VsBrushes.CommandBarMenuBackgroundGradientKey}}" Padding="3" FontWeight="Bold" />
		<local:cntrlRichTextEditor x:Name="txtMessage" IsReadOnly="True" IsToolbarVisible="False" Padding="5 0 5 0" />
	</StackPanel>
</UserControl>
